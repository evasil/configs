server {

server_name www.kvs-site.click;
return 301 $scheme://kvs-site.click$request_uri;
error_log /var/log/nginx/www.kvs-site.click.error info;

include templates/ip4_1_80;

}



server {

server_name kvs-site.click;

error_log	/var/log/nginx/kvs-site.click.error.log warn;

# Ban countries, see nginx.conf for definition.
if ($allowed_country = no) {
            return 444;
        }

include templates/ip4_1_80;


root /srv/www/kvs-site.click/;

index index.php;

charset utf-8;

error_page 404 =  @cust404;

location @cust404 {
            return 301 /404.html;
        }

#access_log /var/log/nginx/test.log scripts;


#ssi on;
#ssi_last_modified on;

include templates/ps-kvs-site;
include templates/kvs-rewrites;

include templates/kvs-security;

include templates/frames;

include templates/scanners;

include templates/kvs-site-php;

include templates/default-static;


}  # close server

### Addon server for static subdomains s1...s8

server {

charset utf-8;

include /etc/nginx/templates/ip4_1_80;

server_name "~^s\w{1}\.kvs-site.click$";

root /srv/www/kvs-site.click/;

index	404.html;

access_log off;
error_log /var/log/nginx/kvs-site.click-static.log error;


include templates/ps-kvs-site;
include templates/kvs-rewrites-static;
include templates/nocookie-static;

more_clear_headers 'Set-Cookie' 'Cookie';

location / {
        access_log off;
        expires    max;
        add_header Cache-Control public;
        fastcgi_hide_header Set-Cookie;

}

}

server {

server_name monit.mysite.click;

error_log /var/log/nginx/monit.mysite.click.error info;

include templates/ip4_1_80;

include templates/le;

return 301 https://$server_name$request_uri;

}



server {

server_name monit.mysite.click;

error_log	/var/log/nginx/monit.mysite.click.error.log warn;


include templates/ip4_1_443;

charset utf-8;

ssl on;

ssl_certificate /opt/dehydrated/certs/monit.mysite.click/fullchain.pem;
ssl_certificate_key /opt/dehydrated/certs/monit.mysite.click/privkey.pem;
ssl_trusted_certificate /opt/dehydrated/certs/monit.mysite.click/chain.pem;

ssl_stapling on;
ssl_stapling_verify on;

resolver 8.8.8.8 8.8.4.4 valid=300s;
resolver_timeout 15s;
##add_header Strict-Transport-Security "max-age=31536000; includeSubdomains;";



include templates/le;

include templates/cloudflare;

location / {
        proxy_pass http://127.0.0.1:2812;
#        proxy_set_header Host $host;
#        proxy_set_header X-Real-IP $remote_addr;
#        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
#        proxy_set_header X-Forwarded-Proto https;
}



}  # close server


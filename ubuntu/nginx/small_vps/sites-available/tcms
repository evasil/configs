server {

server_name www.tcms-site.click;
return 301 $scheme://tcms-site.click$request_uri;
error_log /var/log/nginx/www.tcms-site.click.error info;

include templates/ip4_1_80;

}



server {

server_name tcms-site.click;

error_log	/var/log/nginx/tcms-site.click.error.log warn;

# Ban countries, see nginx.conf for definition.
if ($allowed_country = no) {
            return 444;
        }

include templates/ip4_1_80;


root /srv/www/tcms-site.click/;

index index.html index.php;

charset utf-8;

error_page 404 =  @cust404;

location @cust404 {
            return 301 /404.html;
        }

include templates/ps-tcms-site;

include templates/tcms-rewrites;

include templates/tcms-security;

include templates/frames;

include templates/scanners;

include templates/tcms-site-php;

include templates/default-static;


}  # close server

### Addon server for static subdomains s1...s8

server {

charset utf-8;

include /etc/nginx/templates/ip4_1_80;

server_name "~^s\w{1}\.tcms-site.click$";

root /srv/www/tcms-site.click/;

index	404.html;

access_log off;
error_log /var/log/nginx/tcms-site.click-static.log error;

include templates/ps-tcms-site;

include templates/tcms-rewrites-static;

include templates/nocookie-static;

}
